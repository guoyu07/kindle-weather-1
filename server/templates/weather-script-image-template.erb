<svg height="1200" width="824" version="1.1"
	xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

  <g font-family="DejaVu Sans" transform="translate(100 0)">
  	<g transform="translate(25 0)">
      <use transform="translate(-8.75 65) scale(3.25)" xlink:href="weather-script-icons.svg#<%= today[:icon] %>"/>
  		<text style="text-anchor:begin;"  font-size="35px"  x="0"         y="52.256058" >Today:</text>
  		<text style="text-anchor:middle;" font-size="35px"  x="420"       y="121.70689" >High:</text>
  		<text style="text-anchor:end;"    font-size="100px" x="501.72095" y="209.20592" ><%= today[:high] %></text>
  		<text style="text-anchor:middle;" font-size="64px"  x="523.30981" y="182.48717" >째F</text>
  		<text style="text-anchor:middle;" font-size="35px"  x="415.80057" y="275.13895" >Low:</text>
  		<text style="text-anchor:end;"    font-size="100px" x="501.23267" y="359.8533"  ><%= today[:low] %></text>
  		<text style="text-anchor:middle;" font-size="64px"  x="523.30981" y="333.13455" >째F</text>
  	</g>
  <% for day in next_three_days %>
  	<g transform="translate(<%= day[:offset] %> 480)">
  		<use transform="scale(1.2)" xlink:href="weather-script-icons.svg#<%= day[:icon] %>"/>
  		<text style="text-anchor:middle;" font-size="32px"  x="63" y="-14"   ><%= day[:day] %>:</text>
  		<text style="text-anchor:middle;" font-size="20px"  x="35" y="156"   >High:</text>
  		<text style="text-anchor:end;"    font-size="58px"  x="76" y="206"   ><%= day[:high] %></text>
  		<text style="text-anchor:middle;" font-size="37px"  x="94" y="191"   >째F</text>
  		<text style="text-anchor:middle;" font-size="20px"  x="32" y="244.5" >Low:</text>
  		<text style="text-anchor:end;"    font-size="58px"  x="76" y="293.5" ><%= day[:low] %></text>
  		<text style="text-anchor:middle;" font-size="37px"  x="94" y="278"   >째F</text>
  	</g>
  <% end %>
  	<path transform="translate(200 475)" d="m0,321,3,0,0,-321,-3,0z"/>
  	<path transform="translate(400 475)" d="m0,321,3,0,0,-321,-3,0z"/>
  	<path transform="translate(600 475)" d="m0,321,3,0,0,-321,-3,0z"/>

  </g>
	<g transform="translate(412 820)">
		<text style="text-anchor: middle;" font-size="25px" font-weight="bold">@<%= twitter[:name] %></text>
	</g>
	<g transform="translate(60 850)">
		<% twitter[:tweets].each_with_index do |tweet,twit_index| %>
			<% tweet.chars.each_slice(tweet.index(' ', 50) || 50).map(&:join).each_with_index do |line,index| %>
				<text style="text-anchor:left;" font-size="25px" x="<%= (index + 1) * 30 %>" y="<%= twit_index * 65 + index * 30 %>">
					<%= line %>
				</text>
			<% end %>
		<% end %>
	</g>

</svg>
